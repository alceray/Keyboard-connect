{
  "name": "keyboard-connect",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "start-electron": "wait-on ./dist/bundle.js && electron .",
    "dev": "concurrently --names \"WEBPACK,ELECTRON\" --prefix name \"npm:watch\" \"npm:start-electron\"",
    "rebuild": "electron-rebuild",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alceray/keyboard-connect.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.10.0",
    "electron": "^29.0.1",
    "electron-builder": "^24.12.0",
    "electron-rebuild": "^3.2.9",
    "style-loader": "^3.3.4",
    "wait-on": "^7.2.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.7"
  },
  "type": "module",
  "build": {
    "appId": "com.alceray.keyboard-connect",
    "directories": {
      "buildResources": "assets",
      "output": "release",
      "app": "dist"
    },
    "files":[
      "build/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "npmRebuild": true
  }
}
